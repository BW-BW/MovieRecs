@{
    ViewData["Title"] = "Home Page";

    // Define the available film genres
    List<string> filmGenres = new List<string>
    {
        "Action",
        "Comedy",
        "Drama",
        "Horror",
        "Romance",
        "Sci-Fi",
        "Thriller",
        "Western",
        "Fantasy"
    };
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        .center-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .genre-checkbox {
            margin-top: 10px;
            margin-bottom: 5px;
        }

        .title-style {
            margin-top: 10px;
            margin-bottom: 50px;
        }
    </style>
</head>
<body>
    <div class="center-container">
        <div class="container">
            <h2 class="text-center title-style">Select 3 Film Genres:</h2>

            <form method="post" action="@Url.Action("CallApi", "Home")">
                <div class="row">
                    @for (int i = 0; i < filmGenres.Count; i++)
                    {
                        <div class="col-4">
                            <div class="form-check genre-checkbox">
                                <input class="form-check-input" type="checkbox" name="selectedGenres" value="@filmGenres[i]" id="@filmGenres[i]">
                                <label class="form-check-label" for="@filmGenres[i]">@filmGenres[i]</label>
                            </div>
                        </div>

                        @if ((i + 1) % 3 == 0)
                        {
                            @:</div><div class="row">
                        }
                    }
                </div>

                <div class="text-center mt-4">
                    <input type="submit" value="Submit" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>